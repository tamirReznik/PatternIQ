# Example environment configurations for PatternIQ

# =============================================================================
# BATCH MODE - Run once per day and exit
# =============================================================================
# Perfect for daily cron jobs or scheduled tasks

# Basic batch mode
PATTERNIQ_ALWAYS_ON=false
START_API_SERVER=false
GENERATE_REPORTS=true
REPORT_FORMATS=json,html

# Batch mode with Telegram notifications
PATTERNIQ_ALWAYS_ON=false
START_API_SERVER=false
SEND_TELEGRAM_ALERTS=true
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_IDS=123456789

# =============================================================================
# ALWAYS-ON MODE - Continuous operation
# =============================================================================
# System runs continuously, API server always available

PATTERNIQ_ALWAYS_ON=true
START_API_SERVER=true
API_HOST=0.0.0.0
API_PORT=8000
SEND_TELEGRAM_ALERTS=true
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_IDS=123456789

# =============================================================================
# DEVELOPMENT MODE - API server only for testing
# =============================================================================
# Just runs API server without pipeline execution

PATTERNIQ_ALWAYS_ON=false
START_API_SERVER=true
API_HOST=127.0.0.1
API_PORT=8000
GENERATE_REPORTS=false

# =============================================================================
# PRODUCTION MODE - Full features enabled
# =============================================================================

PATTERNIQ_ALWAYS_ON=true
START_API_SERVER=true
API_HOST=0.0.0.0
API_PORT=8000

# Database
PATTERNIQ_DB_URL=postgresql://username:password@localhost:5432/patterniq

# Telegram
SEND_TELEGRAM_ALERTS=true
TELEGRAM_BOT_TOKEN=your_actual_bot_token
TELEGRAM_CHAT_IDS=your_chat_id

# Trading (keep paper trading for safety)
PAPER_TRADING=true
INITIAL_CAPITAL=100000.0
MAX_POSITION_SIZE=0.05

# Reports
GENERATE_REPORTS=true
REPORT_FORMATS=json,html,pdf

# Data
UNIVERSE=SP500
LOOKBACK_DAYS=1800

# =============================================================================
# CRON JOB EXAMPLE - Daily execution at 6 AM
# =============================================================================
# Add this to your crontab (crontab -e):
# 0 6 * * 1-5 cd /path/to/PatternIQ && python run_patterniq.py batch --telegram
